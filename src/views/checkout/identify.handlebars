<div class="col-xs-12 col-sm-12 col-md pb-5 pb-md-0">
  <main>
    <div class="box">
      <form action="/checkout/identify" class="needs-validation" method="post" novalidate>
        <div class="row">
          <div class="col-12">
            <div class="row">
              <div class="col mb-3">
                <label for="fullname" class="form-label">Nome Completo</label>
                <input type="text"
                {{#if fieldErrors.fullname}}
                 class="form-control is-invalid"
                {{else}}
                  class="form-control"
                {{/if}}
                id="fullname" name="fullname" aria-describedby="fullnameValidation" />
                {{#if fieldErrors.fullname}}
                <div id="fullnameValidation" class="invalid-feedback">
                  {{result.fullname.msg}}
                </div>
                {{/if}}
              </div>
            </div>
            <div class="row">
              <div class="col mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email"
                  {{#if fieldErrors.email}}
                  class="form-control is-invalid"
                  {{else}}
                  class="form-control"
                  {{/if}}
                  id="email" name="email" 
                  aria-describedby="emailValidation" />

                  {{#if fieldErrors.email}}
                  <div id="emailValidation" class="invalid-feedback">
                    {{result.email.msg}}
                  </div>
                  {{/if}}
              </div>
            </div>
            <div class="row">
              <div class="col mb-3">
                <label for="cpf" class="form-label">CPF</label>
                <input type="text" 
                  {{#if fieldErrors.cpf}}
                  class="form-control is-invalid"
                  {{else}} 
                  class="form-control"
                  {{/if}}
                  id="cpf" name="cpf"
                  aria-describedby="cpfValidation"/>

                   {{#if fieldErrors.cpf}}
                  <div id="cpfValidation" class="invalid-feedback">
                    {{result.cpf.msg}}
                  </div>
                  {{/if}}
              </div>
            </div>
            <div class="row">
              <div class="col mb-5">
                <label for="cellphone" class="form-label">Celular com DDD</label>
                <input type="text" 
                  {{#if fieldErrors.cellphone}}
                  class="form-control is-invalid"
                  {{else}}
                  class="form-control"
                  {{/if}}
                   id="cellphone" name="cellphone" 
                   aria-describedby="cellphoneValidation"/>

                    {{#if fieldErrors.cellphone}}
                  <div id="cellphoneValidation" class="invalid-feedback">
                    {{result.cellphone.msg}}
                  </div>
                  {{/if}}
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <button type="submit" class="btn btn-primary">Avan√ßar</button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </main>
</div>